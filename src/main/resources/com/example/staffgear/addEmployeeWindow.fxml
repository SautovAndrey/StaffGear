<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.staffgear.AddEmployeeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Добавление нового сотрудника" />

    <TextField fx:id="modelField" promptText="Модель" />
    <TextField fx:id="countField" promptText="Количество" />
    <TextField fx:id="serialNumberField" promptText="Серийный номер" />
    <TextField fx:id="lastNameField" promptText="Фамилия" />
    <TextField fx:id="firstNameField" promptText="Имя" />
    <TextField fx:id="middleNameField" promptText="Отчество" />

    <Button text="Добавить" onAction="#addEmployee" />
</VBox>
